{
  "compilerOptions": {
    "target": "esNext",
    "module": "esNext",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
        "~/*": ["src/*"],
        "@/*": ["src/*"],
        "~~/*": ["./*"],
        "@@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.vue"
  ]
}